<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Detail">

    <TextView
        android:id="@+id/textViewThucAn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageviewHinh"
        android:layout_centerHorizontal="true"
        android:text="Ten Phép Toán"
        android:textColor="#ff00"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textviewMoTa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewThucAn"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:text="Mo ta"
        android:textColor="#002AFF"
        android:textSize="22sp" />

    <ImageView
        android:id="@+id/imageviewHinh"
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:padding="10dp" />

    <ImageView
        android:id="@+id/imageviewBack_SU"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        android:src="@drawable/ic_back" />
    <TextView
        android:id="@+id/texta"
        android:textSize="22sp"
        android:textColor="#1479CC"
        android:text="Nhập a"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/textviewMoTa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/edta"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/texta"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:id="@+id/textb"
        android:textSize="22sp"
        android:textColor="#1479CC"
        android:text="Nhập b"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/edta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/edtb"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/textb"
        android:layout_marginLeft="20dp"/>
    <TextView
        android:id="@+id/textketqua"
        android:textSize="22sp"
        android:textColor="#1479CC"
        android:text="Kết quả"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/edtb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/edtketqua"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/textketqua"
        android:layout_marginLeft="20dp"
        android:textColor="#F33C3C"/>


    <Button
        android:id="@+id/btntinh"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/edtketqua"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:backgroundTint="@color/gradStart"
        android:text="Thực hiện tính" />


</RelativeLayout>